<?xml version=1.0 encoding=UTF-8 standalone=yes?>
<Package xmlns=http://soap.sforce.com/2006/04/metadata>
<!-- 
     1. This template contains all the metadata types that is required to extract the complete
        the profile settings as some of the profile settings are only extracted if the corresponding 
        metadata type is a part of the package.xml. 

     2. This is based on the details specified at URL 
        https://developer.salesforce.com/docs/atlas.en-us.api_meta.meta/api_meta/meta_profile.htm

     3. Some of these metadata types does not work with wildcard asterisk (*). A comment has
        been added to such metadata types. Replace asterisk with the API name of the
        components that needs to be retrieved      
-->
    <types>
        <members>*</members>
        <name>ApexClass</name>
    </types>
    <types>
        <members>*</members>
        <name>ApexPage</name>
    </types>
    <types>
        <members>*</members>
        <name>CustomApplication</name>
    </types>
<!-- Wildcard character asterisk (*) does not work on CustomField. This needs to be specified explicitly -->    
    <types>
        <members>*</members>
        <name>CustomField</name>
    </types>
    <types>
        <members>*</members>
        <name>CustomMetadata</name>
    </types>  
    <types>
        <members>*</members>
        <name>CustomObject</name>
    </types>
    <types>
        <members>*</members>
        <name>CustomTab</name>
    </types>
<!-- "DataCategoryGroup" didn't work for Profiles. No DataCategoryGroup Related Persmission was visible in the Profile XML -->    
    <types>
        <members>*</members>
        <name>DataCategoryGroup</name>
    </types>
<types>
        <members>*</members>
        <name>ExternalDataSource</name>
</types>    
<!-- "Flow" didn't work for Profiles. No Flow Related Persmission was visible in the Profile XML -->
    <types>
        <members>*</members>
        <name>Flow</name>
    </types>
<types>
        <members>*</members>
        <name>Layout</name>
</types>    
<!-- Wildcard character asterisk (*) does not work on RecordType. This needs to be specified explicitly -->    
    <types>
        <members>*</members>
        <name>RecordType</name>
    </types>
    <types>
        <members>*</members>
        <name>FlexiPage</name>
    </types>
    <types>
        <members>Admin</members>
        <name>Profile</name>
    </types>
    <version>53.0</version>
</Package>